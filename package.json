{
    "name": "astro-utils",
    "workspaces": [
        "packages/*",
        "examples/*"
    ],
    "workspaceRelease": {
        "npmRelease": true,
        "extendsReleaseRules": [
            {
                "type": "bump",
                "release": "patch"
            }
        ]
    },
    "scripts": {
        "create-release": "semantic-release-npm-workspaces-monorepo"
    },
    "devDependencies": {
      "semantic-release-npm-workspaces-monorepo": "^3.1.0-beta.4"
    }
}
