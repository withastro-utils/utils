{
    "name": "astro-utils",
    "workspaces": [
        "packages/*",
        "examples/*"
    ],
    "workspaceRelease": {
        "npmRelease": true,
        "extendsReleaseRules": [
            {
                "type": "bump",
                "release": "patch"
            }
        ],
        "perPackageConfig": {
            "examples/**": {
                "skip": true
            }
        }
    },
    "scripts": {
        "create-release": "semantic-release-npm-workspaces-monorepo"
    },
    "devDependencies": {
        "semantic-release-npm-workspaces-monorepo": "^3.2.0"
    }
}
