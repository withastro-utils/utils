{
  "name": "astro-utils",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "workspaceRelease": {
    "npmRelease": true,
    "extendsReleaseRules": [
      {
        "type": "bump",
        "release": "patch"
      }
    ],
    "branches": [
      "main",
      {
        "name": "beta",
        "prerelease": true,
        "range": "4.x"
      }
    ]
  },
  "scripts": {
    "create-release": "semantic-release-npm-workspaces-monorepo"
  },
  "devDependencies": {
    "semantic-release-npm-workspaces-monorepo": "^3.1.0"
  }
}
