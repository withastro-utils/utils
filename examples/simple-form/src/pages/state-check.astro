---
import { BButton, BInput, BOption, BSelect, Bind, BindForm } from '@astro-utils/forms/forms.js';
import Layout from '../layouts/Layout.astro';

const bind = Bind({});

bind.on.newState = () => {
    bind.num = [1, 2, 3, 9];
};

let message = '';
function onSubmit() {
    message = 'Check the console!'
    console.log(bind.num);
}
---

<Layout title='Test Select'>
    <BindForm bind={bind}>
        <p>{message}</p>
        {bind.num?.map((value, index) => <BInput name={`num[${index}]`} placeholder={value} />)}
        <BButton whenFormOK onClick={onSubmit}>Submit</BButton>
    </BindForm>
</Layout>
